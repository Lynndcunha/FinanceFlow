            />

        <activity android:name="com.financeflow.screen.NotificationListActivity"
            android:screenOrientation="portrait"
            android:exported="true"

            />

        <activity android:name="com.financeflow.screen.ProfileActivity"
            android:screenOrientation="portrait"
            android:exported="true"

            />

        <activity android:name="com.financeflow.screen.SplitListActivity"
            android:screenOrientation="portrait"
            android:exported="true"

