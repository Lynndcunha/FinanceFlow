<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/custom_size20"
    android:background="@color/black1">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_back"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/text_size14"
            android:paddingLeft="@dimen/custom_size8"
            android:drawableTint="@color/white"
            android:drawableLeft="@mipmap/back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/text_size20"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/txt_back"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/custom_size10"
            android:layout_marginTop="@dimen/custom_size100"
            >



            <TextView
                android:layout_marginTop="@dimen/custom_size40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/string_forgotcontentotp"
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/text_size14"

                />


            <com.otpview.OTPTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/custom_size40"
                app:otp_text_size="20sp"
                app:otp_box_background="@drawable/bg_otp_box"
                app:otp_box_background_active="@drawable/bg_otp_box_active"
                app:otp_box_background_inactive="@drawable/bg_otp_box_inactive"
                app:otp_box_background_error="@drawable/bg_otp_box_error"
                app:otp_box_background_success="@drawable/bg_otp_box_success"
                app:hide_otp_drawable="@drawable/bg_otp_box_hide"
                app:height="45dp"
                app:width="40dp"
                app:box_margin="6dp"
                app:hide_otp="false"
                app:length="4"
                android:layout_gravity="center"
                app:otp=""/>





            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edtxt_send"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/string_verify"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/text_size14"
                android:textAllCaps="false"
                android:background="@drawable/button_bg_new"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>